pipeline {
    agent { label 'jdk11-mvn3.8.4' }
    triggers {
        upstream(upstreamProjects: 'starter project', threshold: hudson.model.Result.SUCCESS)
        cron('*/45 * * * 1-5')
        pollSCM('20 */4 * * 0,6')
    }
    parameters {
        string(name: 'MAVEN_GOAL', defaultValue: 'package', description: 'this for build run')
        choice(name: 'BRANCH_TO_BUILD', choices: ['kscripted', 'kdeclarative', 'master'], description: 'this for run branch')
    }
    stages {
        stage('scm') {
            steps{
               git url : 'https://github.com/nagaraju0/java11-examples.git', branch : "${params.BUILD_TO_RUN}"
                
            }
        }
        stage('build') {
            steps{
                sh "/usr/local/apache-maven-3.8.4/bin/mvn ${params.MAVEN_GOAL}"
            }
        }
    }
}










