pipeline {
    agent { label 'jdk11-mvn3.8.4' }
    triggers {
        upstream(upstreamProjects: 'starter project', threshold: hudson.model.Result.SUCCESS)
        cron('*/45 * * * 1-5')
        pollSCM('20 */4 * * 0,6')
    }
    parameters {
        string(name: 'MAVEN_GOAL', defaultValue: 'package', description: 'goal for maven')
        choice(name: 'BRANCH_TO_BUILD', choices: ['kscripted', 'kdeclarative', 'master'], description: 'branch to build')
    }
    stages {
        stage('scm') {
            steps{
               git 'https://github.com/nagaraju0/java11-examples.git'
                
            }
        }
        stage('build') {
            steps{
                sh '/usr/local/apache-maven-3.8.4/bin/mvn clean package'
            }
        }
    } 
        post {
            alwyas {
                mail from: "nagarajucivil011@gmail.com",
                to: 'abbaigarimanavadu77@gmail.com',
                subject: "Status of the pipeline ${currentBuild.fullDisplayName}",
                body: "${env.BUILD_URL} has a result ${currentBuild.result}"
            
            
            }
        }
}










